<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="dev.lpa.contactsapp.AddNewContactController">

    <HBox alignment="CENTER_LEFT" GridPane.columnSpan="1" GridPane.rowIndex="0">
        <Label text="First Name: " />
        <TextField fx:id="firstNameInput">
         <HBox.margin>
            <Insets left="25.0" />
         </HBox.margin></TextField>
    </HBox>
    <HBox alignment="CENTER_LEFT" GridPane.columnSpan="1" GridPane.rowIndex="1">
        <Label text="Last Name: " />
        <TextField fx:id="lastNameInput">
         <HBox.margin>
            <Insets left="25.0" />
         </HBox.margin></TextField>
    </HBox>
    <HBox alignment="CENTER_LEFT" GridPane.columnSpan="1" GridPane.rowIndex="2">
        <Label text="Phone Number: " />
        <TextField fx:id="phoneNumberInput">
         <HBox.margin>
            <Insets left="2.0" />
         </HBox.margin></TextField>
    </HBox>
    <HBox alignment="CENTER_LEFT" GridPane.columnSpan="1" GridPane.rowIndex="3">
        <Label text="Notes: ">
         <HBox.margin>
            <Insets right="51.0" />
         </HBox.margin></Label>
        <TextArea fx:id="notesInput">
         <HBox.margin>
            <Insets />
         </HBox.margin></TextArea>
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
